{
  "manifest_version": 2,

  "name": "TeamCity Dashboard",
  "description": "This extension provides a dashboard for TeamCity builds.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "pages/popup.html",
    "default_title": "TeamCity Dashboard"
  },
  "background": {
    "scripts": [ "scripts/background.js" ]
  },
  "options_ui": {
    "page": "pages/settings.html",
    "chrome_style": false
  },
  "permissions": [
    "contextMenus",
    "storage",
    "cookies",
    "privacy",
    "http://*/"
  ]
}